<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <title>To-do list</title>
</head>
<body class="d-flex justify-content-center">
    <div class="grid-space">
        <div class="top-left-corner"></div>
        <% for(let i = 0; i < 29; i++) {%>
            <div class="top-side"></div>
        <% } %>
        <div class="top-right-corner"></div>
        <div class="inner-grid">
            <div class="box">
                <div class="top-left-corner-box"></div>
                <% for(let i = 0; i < 25; i++) {%>
                    <div class="top-side-box"></div>
                <% } %>
                <div class="top-right-corner-box"></div>
                <div class="inner-box rounded">
                    <div class="container">
                        <div class="row mt-4">
                            <div class="col text-center display-1">To-do List</div>
                        </div>
                        <hr>
                        <div class="row mt-4">
                            <div class="col d-flex justify-content-center">
                                <div class="input-group" style="width: 700px;">
                                    <input type="text" class="form-control new-task-name" placeholder="add new task">
                                    <button class="btn new-task" style="border: 1px solid brown;">Add new pending task</button>
                                </div>
                            </div>
                        </div>
                        <div class="row accordion task-list mt-4 d-flex justify-content-center align-content-start text-center">
                        </div>
                    </div>
                </div>
                <% for(let i = 0; i < 25; i++) {%>
                    <div class="left-side-box"></div>
                    <div class="right-side-box"></div>
                <% } %>
                <div class="bottom-left-corner-box"></div>
                <% for(let i = 0; i < 25; i++) {%>
                    <div class="bottom-side-box"></div>
                <% } %>
                <div class="bottom-right-corner-box"></div>
            </div>
        </div>
        <% for(let i = 0; i < 29; i++) {%>
            <div class="left-side"></div>
            <div class="right-side"></div>
        <% } %>
        <div class="bottom-left-corner"></div>
        <% for(let i = 0; i < 29; i++) {%>
            <div class="bottom-side"></div>
        <% } %>
        <div class="bottom-right-corner"></div>
    </div>
    <script src="/scripts/index.js"></script>
</body>
</html>